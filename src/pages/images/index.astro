---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
---

<MainLayout title="Imágenes">
  <h1 class="text-5xl">Imágenes</h1>
  <img
    loading="eager"
    src="/assets/images/post-05.png"
    width="250"
    height="250"
  />

  <Image src={post05Img} alt="Astro Logo" width="250" height="250" />

  <Image
    src={post05Img}
    style={{ width: "250px", height: "250px" }}
    alt="Astro Logo"
    width="500"
    height="500"
  />

  <h1>Quality Low</h1>

  <Image
    src={post05Img}
    quality="low"
    alt="Astro Logo"
    width="250"
    height="250"
  />
  <h1>Quality High</h1>

  <Image
    src={post05Img}
    quality="high"
    alt="Astro Logo"
    width="250"
    height="250"
  />
  <h1>Formatos</h1>

  <Image
    src={post05Img}
    format="avif"
    alt="Astro Logo"
    width="250"
    height="250"
  />

  <h1>Formatos</h1>
  
  <!-- formats={[ "webp", "avif", "jpeg"]} -->
  <!-- widths={[240, 540, 720, post05Img.width]}
  sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`} -->
  <!-- width={myImage.width / 2}
  densities={[1.5, 2]} -->
  <Picture
    src={post05Img}
    alt="Astro Logo"
    width="250"
    height="250"
  />

  <div
    style={{
      height: "3000px",
    }}
  >
  </div>
  <img
    loading="lazy"
    src="/assets/images/post-01.png"
    alt="Astro Logo"
    width="100"
    height="100"
  />
</MainLayout>

<style>
  h1 {
    @apply text-white mt-10;
  }
</style>
